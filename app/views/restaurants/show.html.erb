<div class="card" style="width: 18rem;">
  <div class="card-body">

<h5 class="card-title"><%= @restaurant.name %></h5>

<h6 class="card-subtitle mb-2 text-body-secondary">Address: <%= @restaurant.address %></h6>
<h6 class="card-subtitle mb-2 text-body-secondary">Phone number: <%= @restaurant.phone_number %> </h6>
<h6 class="card-subtitle mb-2 text-body-secondary">Category: <%= @restaurant.category %> </h6>
 </div>
</div>

<h2>Latest reviews:</h2>
<% @restaurant.reviews.each do |review| %>
 <p><strong>Rating: <%= review.rating %></strong> <%= review.content %></p>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Go back to main page", restaurants_path %>
